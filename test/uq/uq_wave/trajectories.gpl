#!/usr/bin/env gnuplot
set macros
! ./reduce.py uq_wave.out.e > reduce.stdout ; echo "reduced data"
data="uq_wave.dat"

nexact = system("grep -h 'trajectories' ".data." | awk '{print $4}'")
napprx = system("grep -h 'trajectories' ".data." | awk '{print $6}'")
ntrajs = nexact+napprx+1
nsteps = system("grep -h 'steps'        ".data." | awk '{print $2}'")

print "ntrajectories ",nexact," ",napprx
print "nsteps        ",nsteps

m = 5
m= (nsteps > m) ? m : nsteps
ds = floor(nsteps/m)
print "increment ",ds

unset xtics
unset ytics

###############################################################################
# TO SCREEN
###############################################################################
k0 = 2+ntrajs
k = k0
set yrange [*:*]
#set yrange [-0.0025:0.0025]
do for [i=1:m] {
set xzeroaxis
plot \
for [j=1:nexact] data u 1:(column(k+j)) index (ds*i-1) w lp t "", \
                 data u 1:(column(k0))  index (ds*i-1) w l lt -1 t ""
pause -1 "xF".i
}

k = k0+nexact
set yrange [*:*]
do for [i=1:m] {
set xzeroaxis
plot \
for [j=1:napprx] data u 1:(column(k+j)) index (ds*i-1) w lp t "", \
                 data u 1:(column(k0))  index (ds*i-1) w l lt -1 t ""
pause -1 "aF".i
}

###############################################################################
k0 = 2
k = k0
set yrange [-0.0035:0.0035]
do for [i=1:m] {
set xzeroaxis
plot \
for [j=1:nexact] data u 1:(column(k+j)) index (ds*i-1) w lp t "", \
                 data u 1:(column(k0))  index (ds*i-1) w l lt -1 t ""
pause -1 "xU".i
}

k = k0+nexact
set yrange [-0.0035:0.0035]
do for [i=1:m] {
set xzeroaxis
plot \
for [j=1:napprx] data u 1:(column(k+j)) index (ds*i-1) w lp t "", \
                 data u 1:(column(k0))  index (ds*i-1) w l lt -1 t ""
pause -1 "aU".i
}

###############################################################################
# TO FILE
###############################################################################
k0 = 2+ntrajs
k = k0
set term png ; set output "exact_force.png"
unset xtics
unset ytics
set yrange [*:*]
set multiplot layout m,1
do for [i=1:m] {
set xzeroaxis
plot \
for [j=1:nexact] data u 1:(column(k+j)) index (ds*i-1) w lp t "", \
                 data u 1:(column(k0))  index (ds*i-1) w l lt -1 t ""
}
unset multiplot

k = k0+nexact
set term png ; set output "sample_force.png"
